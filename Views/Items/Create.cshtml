@model CPW217_PortfolioProject2021.Models.Item

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Item</h4>
<hr />
    <form enctype="multipart/form-data" asp-action="Create">
		<div class="mb-3 w-50">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="input-group mb-3">
				<input asp-for="Name" type="text" class="form-control" placeholder="Name" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="input-group mb-3">
				<div class="custom-file">
					<input asp-for="Photo" type="file" class="custom-file-input" id="photoInp"/>
					<label asp-for="Photo" class="custom-file-label">Photo</label>
					<span asp-validation-for="Photo" class="text-danger"></span>
				</div>
			</div>
			<div class="mb-3">
				<img id="photo-preview" class="img-thumbnail" style="display: none;">
			</div>
			<div class="input-group mb-3">
				<div class="custom-file">
					<input asp-for="Model" type="file" class="custom-file-input" />
					<label asp-for="Model" class="custom-file-label">Model</label>
					<span asp-validation-for="Model" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</div>
    </form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

	<script type="text/javascript">
		$("#photoInp").change(function () {
			if (this.files && this.files[0]) {
				var reader = new FileReader();

				reader.onload = function (e) {
					$("#photo-preview").attr('src', e.target.result);
				}

				reader.readAsDataURL(this.files[0]);
				$("#photo-preview").show();
			}
		});
	</script>
}
